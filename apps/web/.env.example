# API backend URL for Next.js rewrites (leave empty for local dev â€” direct to localhost:8080)
# API_BACKEND_URL=https://lumen-api.fly.dev

# Server-side Anthropic token (leave empty for client-side BYOK)
# ANTHROPIC_TOKEN=sk-ant-oat-...

# Enable server-managed LLM mode (skips client-side key management)
# NEXT_PUBLIC_LLM_SERVER_MODE=true

# Default model selection (supported: opus-4.5, opus-4.6)
# NEXT_PUBLIC_DEFAULT_MODEL_ID=opus-4.6

# Idle minutes before vault key is cleared after tab is backgrounded
# NEXT_PUBLIC_VAULT_IDLE_TIMEOUT_MINUTES=30

# API base URL for client-side fetch (leave empty for same-origin in production)
# NEXT_PUBLIC_API_BASE_URL=http://localhost:8080
